import openai

# Initialize OpenAI API (replace 'api-9908112' with your actual OpenAI API key)
openai.api_key = "your-api-key"

def chat_with_ai(prompt):
    """
    Function to interact with OpenAI's GPT model.
    :param prompt: User input to the AI
    :return: AI's response
    """
    try:
        response = openai.Completion.create(
            engine="text-davinci-003",  # Use the desired GPT engine
            prompt=prompt,
            max_tokens=150,
            temperature=0.7
        )
        return response.choices[0].text.strip()
    except Exception as e:
        return f"Error: {e}"

if __name__ == "__main__":
    print("Welcome to the AI Chatbot! Type 'exit' to quit.")
    while True:
        user_input = input("You: ")
        if user_input.lower() == "exit":
            print("Goodbye!")
            break
        ai_response = chat_with_ai(user_input)
        print(f"AI: {ai_response}")
